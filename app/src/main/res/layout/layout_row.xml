<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/main_layout_top_padding"
        tools:context="com.example.cryptocurrencyexchangerate.MainActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_bottom"
            android:layout_width="@dimen/bottom_cardview_width"
            android:layout_height="@dimen/bottom_cardview_height"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_remove_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_remove_card"/>


            <TextView
                android:id="@+id/tv_crypto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>


        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>
